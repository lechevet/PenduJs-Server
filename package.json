{
  "name": "webfactory-api",
  "version": "1.0.0",
  "description": "REST API for frontend and mobile applications",
  "main": "build/app.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "install": "cp -rf src_externes/@amiltone node_modules/",
    "lint": "tslint -c tslint.json src/**",
    "start": "cross-env DOTENV_FILE=.env  node build/app.js",
    "start-dev": "npm-run-all --parallel build:watch assets:start-dev",
    "test-jenkins": "npm run build && cross-env DOTENV_FILE=.env mocha build/**/*.spec.js --recursive --inspect --reporter spec",
    "test": "cross-env DATABASE_MONGODB_DATABASE_NAME=penduJs-server-api-test npm-run-all --parallel build:watch assets:test",
    "test-unit": "npm-run-all --parallel assets:test-unit",
    "test-functionals": "npm-run-all --parallel assets:test-functionals",
    "assets:start-dev": "cross-env DOTENV_FILE=.env nodemon -L build/app.js",
    "assets:test-unit": "cross-env DOTENV_FILE=.env nodemon --exec \"mocha build/**/unit/**/*.spec.js --recursive --inspect --watch --reporter spec --bail\"",
    "assets:test-functionals": "cross-env DOTENV_FILE=.env nodemon --exec \"mocha build/**/api/**/*.spec.js --recursive --inspect --watch --reporter spec --bail\"",
    "assets:test": "cross-env DOTENV_FILE=.env nodemon --exec \"istanbul cover node_modules/mocha/bin/_mocha build/**/*.spec.js\"",
    "db:migrate": "cross-env DOTENV_FILE=.env node build/migrations/db-migration.js",
    "db:migrate-undo": "cross-env DOTENV_FILE=.env node build/migrations/db-migration.js undo"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:<path-to/gitlab-project>.git"
  },
  "author": "Web Factory",
  "license": "ISC",
  "dependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/multer": "^1.3.6",
    "@types/mz": "0.0.32",
    "body-parser": "^1.17.2",
    "common-env": "^6.1.0",
    "crypto": "0.0.3",
    "csv": "^1.1.1",
    "dotenv": "^4.0.0",
    "es6-promisify": "^5.0.0",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "express-openapi": "^1.0.0",
    "glob": "^7.1.2",
    "istanbul": "^1.1.0-alpha.1",
    "json-schema-filter": "^0.1.5",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "moment-recur": "^1.0.7",
    "mongodb": "^2.2.30",
    "multer": "^1.3.0",
    "mz": "^2.6.0",
    "node-cron": "^1.2.0",
    "nodemailer": "^4.1.1",
    "nyc": "^11.1.0",
    "pbkdf2": "^3.0.12",
    "supertest": "^3.0.0",
    "swagger-tools": "^0.10.3",
    "uuid": "^3.1.0",
    "winston": "^2.3.1",
    "winston-daily-rotate-file": "^1.4.6"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/express": "^4.0.35",
    "@types/mocha": "^2.2.41",
    "@types/mongodb": "^2.2.7",
    "@types/winston": "^2.3.4",
    "chai": "^4.1.0",
    "cross-env": "^5.0.1",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "rewire": "^2.5.2",
    "sinon": "^2.4.1",
    "sinon-chai": "^2.12.0",
    "system-sleep": "^1.3.5",
    "tslint": "^5.4.3",
    "typescript": "^2.4.2"
  }
}
